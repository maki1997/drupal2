<form action="/books/add" method="post">
  Title:<input type="text" name="title" class="form-control" placeholder="Enter title...">
  Price:<input type="number" name="price" class="form-control" placeholder="Enter price...">
  ISBN:<input type="text" name="isbn" class="form-control" placeholder="Enter ISBN...">
  Comment:<input type="text" name="comment" class="form-control" placeholder="Enter comment..."><br>
  <input type="submit" class="form-control">
</form>
{% for book in books %}
  <h1>{{ book.title }}</h1>
  <div id="books">
    <table class="table table-hover">
      <thead><tr><th> Price </th><th> ISBN </th></tr></thead>
      <tbody><td>{{book.price}}$</td><td>{{book.isbn}}</td></tbody>
    </table>
  </div>
  <div id="comments">
    <table class="table table-hover">
      <thead><tr><th>Comments</th></thead>
      <tbody>{% for c in book.comments %}<tr><td>{{c}}</td></tr>{% endfor %}</tbody>
    </table>
  </div>
  <hr>
{% endfor %}

